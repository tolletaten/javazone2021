{
  "name": "toll-gui",
  "version": "1.3.7",
  "private": true,
  "scripts": {
    "start": "webpack-dev-server",
    "start:dev": "concurrently --raw \"npm run start\" \"npm run check-types:watch\"",
    "start:prod": "npm run build && npm run serve",
    "build": "webpack --mode production",
    "serve": "cross-env serve dist -s -p 8080",
    "clean": "rm -rf dist",
    "lint": "eslint \"./src/**/*.{ts,tsx}\" --fix && prettier \"./src/**/*.{ts,tsx,js,css,md}\" --write",
    "check-types": "tsc",
    "check-types:watch": "npm run check-types -- --watch"
  },
  "dependencies": {
    "@toll/ui": "1.6.61",
    "@unleash/proxy-client-react": "1.0.0",
    "cross-env": "^7.0.3",
    "date-fns": "^2.25.0",
    "i18next": "^21.4.2",
    "i18next-browser-languagedetector": "^6.1.2",
    "jsonpointer": "^5.0.0",
    "lodash": "^4.17.21",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-i18next": "^11.14.0",
    "react-query": "^3.32.1",
    "react-router-dom": "^6.0.2",
    "serve": "13.0.2",
    "typeface-roboto": "1.1.13",
    "universal-cookie": "^4.0.4"
  },
  "devDependencies": {
    "@babel/core": "7.16.0",
    "@babel/preset-react": "7.16.0",
    "@babel/preset-typescript": "^7.16.0",
    "@types/lodash": "^4.14.176",
    "@types/react": "^17.0.34",
    "@types/react-dom": "^17.0.11",
    "@types/react-router-dom": "^5.3.2",
    "@typescript-eslint/eslint-plugin": "^5.3.1",
    "@typescript-eslint/parser": "^5.3.1",
    "babel-loader": "8.2.3",
    "clsx": "^1.1.1",
    "concurrently": "^6.3.0",
    "copy-webpack-plugin": "^9.0.1",
    "css-loader": "^6.5.1",
    "dotenv": "^10.0.0",
    "eslint": "^8.2.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-react": "^7.27.0",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^7.0.4",
    "lint-staged": "^11.2.6",
    "prettier": "2.4.1",
    "style-loader": "^3.3.1",
    "typescript": "^4.4.4",
    "url-loader": "^4.1.1",
    "webpack": "^5.63.0",
    "webpack-bundle-analyzer": "^4.5.0",
    "webpack-cli": "4.9.1",
    "webpack-dev-server": "4.4.0"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run check-types && lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix"
    ],
    "*.{ts,tsx,js,css,md}": [
      "prettier --write"
    ]
  }
}
